<resources>

    <!-- Core application theme. -->
    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/slapp_blue</item>
        <item name="android:colorPrimaryDark">@color/slapp_blue_accent</item>
    </style>

    <!-- Splash theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/slapp_blue</item>
        <item name="colorPrimaryDark">@color/slapp_blue_accent</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="SplashTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/slapp_blue</item>
        <item name="colorPrimaryDark">@color/slapp_blue</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SplashTheme.SplashButton" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/slapp_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SplashTheme.SplashEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>