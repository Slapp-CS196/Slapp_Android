<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    tools:context=".MainActivity"
    app:theme="@style/SplashTheme"
    android:orientation="vertical"
    android:background="@color/slapp_blue_accent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="76"
        android:paddingTop="20dp"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginBottom="6dp"
            android:text="@string/main_sign_up"
            style="@style/SplashTheme.SplashButton"
            android:onClick="onButtonClick"
            android:id="@+id/main_btnSignUp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginTop="6dp"
            android:text="@string/main_log_in"
            style="@style/SplashTheme.SplashButton"
            android:onClick="onButtonClick"
            android:id="@+id/main_btnLogIn"/>
    </LinearLayout>

</LinearLayout>
